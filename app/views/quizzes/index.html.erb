<%= turbo_stream_from :quizzes %>


<div class="split left">
  <div class="centered">
  <h1>Add a Quiz</h1>
    <%= turbo_frame_tag :quiz_form do %>
      <%= render 'quizzes/form', quiz: @quiz %>
    <% end %>
  </div>
</div>

<div class="split right">
  <div class="centered">
  <h1>Quizzes</h1>
    <%= turbo_frame_tag :quizzes do %>
      <%= render @quizzes %>
    <% end %>
  </div>
</div>
