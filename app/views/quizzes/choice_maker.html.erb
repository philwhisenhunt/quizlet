<div class="split left">
  <div class="centered">
    <h1><%= @question.title %></h1>
  </div>
</div>
<div class="split right">
  <div class="centered">
    <%= form_with(model: @attempted_answer, local: true) do |form| %>
    <div class="option-holder">
        <div class="actions">
            <%= form.submit "Check Answer" %>
        </div>
    </div>
    <% end %>
  </div>
</div>