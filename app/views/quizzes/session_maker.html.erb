<div class="split left">
  <div class="centered">
    <h1><%= @question.title %></h1>
  </div>
</div>

<div class="split right">
  <div class="centered">
    <%= form_with(model: @attempted_answer, local: true) do |form| %>
        <div class="field">
            <h1><%= form.label :attempted_answer, "Answer:" %></h1>
            <%= form.text_field :attempted_answer %>
        </div>

        <div class="actions">
            <%= form.submit "Check Answer" %>
        </div>
    <% end %>
  </div>
</div>